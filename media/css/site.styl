$mild-blue = #4A90E2;

body {
  background-color: #fff;
  color: #000;
  font-family: helvetica, sans-serif;
}
a {
  color: $mild-blue;
}
p {
  line-height: 1.5;
}
.global-wrapper {
  width: 1024px;
  margin: 0 auto;
}
.primary-header {
  display: flex;
  font-size: 14px;
  justify-content: space-between;

  h1 {
    font-size: 20px;
    font-weight: 200;
  }
  aside {
    align-self: center;
  }
}
.studies-list {
  list-style: none;
  margin: 35px 0 0;
  padding: 0;
}
.study-list-item {
  margin-bottom: 35px;

  p {
    font-size: 14px;
  }
}
.study-list-heading {
  border-bottom: 1px solid #000;
  font-size: 14px;
  font-weight: 500;
  padding: 0 0 10px;
}
