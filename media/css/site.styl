$mild-blue = #4A90E2;

body {
  background-color: #fff;
  color: #000;
  font-family: helvetica, sans-serif;
}
a {
  color: $mild-blue;
}
p {
  line-height: 1.5;
}
.global-wrapper {
  width: 1024px;
  margin: 0 auto;
}
.primary-header {
  display: flex;
  font-size: 14px;
  justify-content: space-between;

  h1 {
    font-size: 20px;
    font-weight: 200;
  }
  aside {
    align-self: center;
  }
}
.studies-list {
  list-style: none;
  margin: 35px 0 0;
  padding: 0;
}
.study-list-item {
  margin-bottom: 35px;

  p {
    font-size: 14px;
  }
}
.study-list-heading {
  border-bottom: 1px solid #000;
  font-size: 14px;
  font-weight: 500;
  padding: 0 0 10px;
}
.button {
  background-image: linear-gradient(-180deg, #BAD582 0%, #93AC67 100%);
  box-shadow: 0 2px 0 0 rgba(0,0,0,0.08), 0 4px 10px 0 rgba(0,0,0,0.10), inset 0 1px 0 1px rgba(255,255,255,0.25), inset 0 -2px 0 1px rgba(0,0,0,0.25);
  border-radius: 3px;
  height: 30px;
  line-height: 30px;
  padding: 0 15px;
  font-size: 14px;
  color: #fff;
  letter-spacing: 0;
  text-shadow: 0 -1px 0 #4F7311;
  cursor: pointer;
}
.sign-in-content {
  padding: 55px 0;
  text-align: center;

  h1 {
    font-size: 20px;
    font-weight: 200;
  }
}
.signed-in-wrapper {
  display: flex;

  h3 {
    align-self: center;
    font-size: 14px;
    font-weight: 200;
    margin: 0;
  }
  .button-sign-out {
    margin: 0 0 0 20px;
  }
}
